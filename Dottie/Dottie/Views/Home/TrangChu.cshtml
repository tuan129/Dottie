@model IEnumerable<Dottie.Models.Product>
@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@Styles.Render("~/Content/Css/HomeProduct.css");

<div class="product-container">
    <div class="product-box">
        <div class="product-item">
            @foreach (var item in Model)
            {
                <div class="product">
                    <div class="percent">@Html.DisplayFor(modelItem => item.discount)</div>
                    <div>
                        <i class="icon-product-heart ti-heart"></i>
                    </div>
                    <div class="img-container">
                        <img class="img-product first-img" src="https://product.hstatic.net/1000324561/product/0t0982_0q0372__1__32a9f983314e43da9bf55e009a6f5420_compact.jpg" />
                        <img class="img-product second-img" src="https://product.hstatic.net/1000324561/product/0t0982_0q0372__2__c4adea6e7f8e4583aee288cebc18f4fa_grande.jpg" />
                    </div>
                    <h3 class="name-product">@Html.DisplayFor(modelItem => item.productName)</h3>
                    <div class="new-price-product">
                        @Html.DisplayFor(modelItem => item.price)
                        <span class="old-price-product">@Html.DisplayFor(modelItem => item.price)</span>
                    </div>
                    <div class="color-product"></div>
                    <div class="percent-discount">
                        Giảm đến 10% cho hóa đơn từ 600K
                    </div>
                </div>
            }
        </div>
    </div>
</div>
